extends ../layouts/default


block content
	.whiteBackground#work
		.col-sm-12.col-md-6.bottom-padding
			h1= work.title
			if work.subtitle
				h4= work.subtitle
			if work.date
				h5= work._.date.format("YYYY")
			if work.description
				.work-description
					p!= work.description
			if work.audio_url
				.audio-player!= work.audio_url
			if work.video_url
				.video-player!= work.video_url
		.col-sm-12.col-md-6.bottom-padding
			img(src=work.image.secure_url).img-responsive.work-image

block js
	script containerDimensions(3, 9, 97, 83, "work");
